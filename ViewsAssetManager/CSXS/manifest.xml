<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    Version="7.0"
    ExtensionBundleId="com.views.assetmanager"
    ExtensionBundleName="Views Asset Manager"
    ExtensionBundleVersion="1.0.0">
    <ExtensionList>
        <Extension Id="com.views.assetmanager" Version="1.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <!-- Support After Effects 2019 (v16) through 2025 (v25) -->
            <Host Name="AEFT" Version="[16.0,25.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <!-- Target CEP runtime compatible back to AE 2019 while still working in newer versions -->
            <RequiredRuntime Name="CSXS" Version="10.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.views.assetmanager">
            <DispatchInfo>
                <Resources>
                    <MainPath>./client/index.html</MainPath>
                    <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <StartOn>
                        <Event>com.adobe.csxs.events.ApplicationActivate</Event>
                    </StartOn>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Views Asset Manager</Menu>
                    <Geometry>
                        <Size>
                            <Width>400</Width>
                            <Height>600</Height>
                        </Size>
                        <MinSize>
                            <Width>300</Width>
                            <Height>400</Height>
                        </MinSize>
                        <MaxSize>
                            <Width>800</Width>
                            <Height>1200</Height>
                        </MaxSize>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>

